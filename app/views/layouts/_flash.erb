<div id="flash">
	<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
	<% elsif flash[:error] %>
	<div class="error"><%= flash[:error] %></div>
	<% elsif flash[:alert] %>
	<div class="warning"><%= flash[:alert] %></div>
	<% elsif flash[:warning] %>
	<div class="warning"><%= flash[:warning] %></div>   
	<% end %>
	<% flash[:notice] = flash[:error] = flash[:warning] = nil %>
</div>